@model TooSimple.Models.ViewModels.DashboardVM

@if (Model.AccountId != null)
{
    <h2>Get started by adding an account</h2>
    <a href="~/Dashboard/Accounts">Add Account <span class="material-icons">library_add</span></a>
}
else
{
    <h2 class="mb-4">
        Available Balance:
        <span style="color:@Model.AmountDisplayColor">
            @Model.AmountDisplayValue
        </span>
    </h2>

    @if (!string.IsNullOrWhiteSpace(Model.LastUpdated))
    {
        <p>Last updated @Model.LastUpdated</p>
    }
}

@if (Model.Transactions.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>Date</th>
                <th>Description</th>
                <th>Amount</th>
                <th>Spent From</th>
            </tr>
        </thead>
        @foreach (var transaction in Model.Transactions)
        {
            <tr>
                <td>
                    @transaction.TransactionDateDisplayValue
                </td>
                <td>
                    <a href="~/Dashboard/LoadTransaction?id=@transaction.TransactionId">
                        <div style="height:100%;width:100%;">
                            @transaction.Name
                            <p>
                                <small class="text-muted">@transaction.MerchantName</small>
                            </p>
                        </div>
                    </a>
                </td>
                <td>
                    <span style="color:@transaction.AmountDisplayColor">
                        @transaction.AmountDisplayValue
                    </span>
                </td>
                <td>
                    @transaction.SpendingFrom
                </td>
            </tr>
        }
    </table>
}
else
{
    <p>No transactions were found for your accounts.</p>
}