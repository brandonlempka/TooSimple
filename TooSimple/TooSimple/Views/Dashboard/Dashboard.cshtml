@model TooSimple.Models.ViewModels.DashboardVM

@if (Model.AccessToken == null)
{
    <h2>Get started by adding an account</h2>
    <a href="~/Dashboard/Accounts">Add Account</a>
}
else
{
    <p>Available Balance: $@Model.CurrentBalance</p>
}

@if (Model.Transactions.Any())
{ 
<table>
    <thead>
        <tr>
            <th>Date</th>
            <th>Transaction</th>
            <th>Amount</th>
            <th>Spent From</th>
            <th>Edit Transaction</th>
        </tr>
    </thead>
    @foreach(var transaction in Model.Transactions)
    {
        <tr>
            <td>
                @transaction.TransactionDate
            </td>
            <td>
                @transaction.MerchantName
            </td>
            <td>
                @transaction.Amount
            </td>
            <td>
                @transaction.SpendingFrom
            </td>
            <td>
                <a href="~/Dashboard/LoadTransaction?id=@transaction.TransactionId">Edit</a>
            </td>
        </tr>
    }
</table>
}
else
{
    <p>No transactions were found for your accounts.</p>
}