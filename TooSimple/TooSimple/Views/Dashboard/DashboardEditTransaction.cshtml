@model TooSimple.Poco.Models.ViewModels.DashboardEditTransactionVM

<h1 class="mb-4">@Model.Name</h1>

<div class="form-row">
    <div class="form-group col-sm-4">
        @Html.LabelFor(m => m.Name, "Transaction Name")
        <br />
        @Model.Name
    </div>
</div>

<div class="form-row">
    <div class="form-group col-sm-4">
        @Html.LabelFor(m => m.Name, "Merchant Name")
        <br />
        @Model.MerchantName
    </div>
</div>

<div class="form-row">
    <div class="form-group col-sm-4">
        @Html.LabelFor(m => m.Name, "Amount")
        <br />
        @Model.Amount.ToString("c")
    </div>
</div>

<div class="form-row">
    <div class="form-group col-sm-4">
        @Html.LabelFor(m => m.AccountName, "Account")
        <br />
        @Model.AccountName
    </div>
</div>

<form id="editTransactionForm" action="~/Dashboard/SaveTransaction" method="post" class="mt-3">
    @Html.HiddenFor(m => m.TransactionId)
    @Html.HiddenFor(m => m.AccountId)
    @Html.HiddenFor(m => m.UserAccountId)

    <div class="form-row">
        <div class="form-btn-group col-sm-6">
             @Html.LabelFor(m => m.SpendingFromId, "Spending From", new { @class = "form-check-label" })
             @Html.DropDownListFor(m => m.SpendingFromId, Model.Goals, new { @class = "form-control" })
        </div>
    </div>

    <div class="form-row mt-3">
        <button id="btnSaveTransaction" class="btn btn-primary">Save</button>
    </div>
</form>